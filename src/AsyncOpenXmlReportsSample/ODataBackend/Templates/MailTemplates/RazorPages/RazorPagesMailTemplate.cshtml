@model IIS.AsyncOpenXmlReportsSample.Templates.MailTemplates.RazorPages.RazorPagesMailTemplateModel
@{
    Layout = "~/Templates/MailTemplates/RazorPages/MailTemplateLayout.cshtml";

    string[] getStringLines(string multiString)
    {
        string[] strings =  multiString.Split("\n");
        return strings;
    }
}

<table border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width: 600px;">
    <tr>
        <td bgcolor="#ffffff" align="left" style="padding: 20px 30px 40px 30px; color: #666666; font-family: 'Lato', Helvetica, Arial, sans-serif; font-size: 18px; line-height: 18px;">
            @foreach (var paragraph in getStringLines(Model.HtmlMessage))
            {
                <p>@paragraph</p>
            }
        </td>
    </tr>
</table>